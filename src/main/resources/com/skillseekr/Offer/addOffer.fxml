            <RadioButton fx:id="wipRadioButton" styleClass="radio-button" text="WIP" />
        </VBox>

        <!-- ComboBoxes -->
        <ComboBox fx:id="typeComboBox" layoutX="341.0" layoutY="283.0" prefHeight="29.0" prefWidth="90.0" promptText="Type" styleClass="combo-box" />
        <ComboBox fx:id="motiveComboBox" layoutX="144.0" layoutY="283.0" prefHeight="29.0" prefWidth="91.0" promptText="Motive" styleClass="combo-box" />
        <ComboBox fx:id="locationComboBox" layoutX="241.0" layoutY="283.0" prefHeight="29.0" prefWidth="95.0" promptText="Location" styleClass="combo-box" />
        <HBox spacing="10" />
        <Button fx:id="saveButton" layoutX="213.0" layoutY="720.0" onAction="#handleSaveButtonAction" styleClass="green-button" text="Save" />
