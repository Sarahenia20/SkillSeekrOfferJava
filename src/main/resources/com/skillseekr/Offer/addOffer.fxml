    <AnchorPane prefHeight="683.0" prefWidth="587.0" style="-fx-background-color: #ADD8E6;">

        <!-- Main VBox -->
        <VBox alignment="CENTER" spacing="10" stylesheets="@form.css">

            <!-- Dropdown menus with labels -->
            <VBox spacing="5" />

            <VBox spacing="5" />

            <VBox spacing="5" />
        </VBox>

        <!-- Image -->
        <ImageView fitHeight="125.0" fitWidth="147.0" layoutX="-7.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/SSBlack.png" />
            </image>
        </ImageView>

        <!-- Form Inputs -->
        <TextField fx:id="titleTextField" layoutX="207.0" layoutY="79.0" promptText="Title" styleClass="text-field" />
        <TextField fx:id="authorTextField" layoutX="207.0" layoutY="122.0" promptText="Author" styleClass="text-field" />
        <!-- Form Inputs -->
        <!-- Form Inputs -->
        <TextArea fx:id="descriptionTextField" layoutX="207.0" layoutY="196.0" prefHeight="80.0" prefWidth="171.0" promptText="Description" styleClass="text-area" />

        <!-- Title -->
        <Label layoutX="226.0" layoutY="43.0" prefHeight="21.0" prefWidth="125.0" styleClass="label-title" text="Create your SS offer" />

        <!-- Listview for skills -->
        <TextField fx:id="searchTextField" layoutX="168.0" layoutY="337.0" prefHeight="29.0" prefWidth="200.0" promptText="Search Skills" />
